<Window
    x:Class="HealthReminder.Windows.UI.OverlayWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="Root" Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="1" HorizontalAlignment="Center" Spacing="16">
            <TextBlock x:Name="TitleText" FontSize="34" FontWeight="SemiBold" Foreground="White" TextAlignment="Center" />
            <TextBlock x:Name="SubtitleText" FontSize="18" Foreground="#DDFFFFFF" TextAlignment="Center" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="12">
                <Button x:Name="SnoozeButton" Click="OnSnooze" Visibility="Collapsed" Background="#334B5563" CornerRadius="14" Padding="18,10">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="\uE121" Foreground="White" />
                        <TextBlock x:Name="SnoozeText" Foreground="White" />
                    </StackPanel>
                </Button>
                <Button x:Name="DoneButton" Click="OnDone" IsEnabled="False" Background="#E84DD2A8" CornerRadius="14" Padding="18,10">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="\uE001" Foreground="White" />
                        <TextBlock x:Name="DoneText" Foreground="White" />
                    </StackPanel>
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
