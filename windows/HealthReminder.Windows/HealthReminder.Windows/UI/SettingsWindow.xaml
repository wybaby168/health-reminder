<Window
    x:Class="HealthReminder.Windows.UI.SettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel Padding="20" Spacing="16">
            <TextBlock x:Name="HeaderTitle" FontSize="32" FontWeight="SemiBold" />
            <TextBlock x:Name="HeaderSubtitle" Foreground="Gray" />

            <StackPanel Spacing="10">
                <TextBlock x:Name="SectionReminders" FontWeight="SemiBold" />
                <ToggleSwitch x:Name="WaterToggle" />
                <ToggleSwitch x:Name="StandToggle" />
                <ToggleSwitch x:Name="EyesToggle" />
            </StackPanel>

            <StackPanel Spacing="10">
                <TextBlock x:Name="SectionIntervals" FontWeight="SemiBold" />
                <NumberBox x:Name="WaterInterval" Minimum="15" Maximum="180" SmallChange="5" />
                <NumberBox x:Name="StandInterval" Minimum="20" Maximum="120" SmallChange="5" />
                <NumberBox x:Name="EyesInterval" Minimum="10" Maximum="60" SmallChange="5" />
            </StackPanel>

            <StackPanel Spacing="10">
                <TextBlock x:Name="SectionActive" FontWeight="SemiBold" />
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <TimePicker x:Name="ActiveStart" />
                    <TimePicker x:Name="ActiveEnd" />
                </StackPanel>
            </StackPanel>

            <StackPanel Spacing="10">
                <TextBlock x:Name="SectionWater" FontWeight="SemiBold" />
                <NumberBox x:Name="DailyGoal" Minimum="1200" Maximum="4000" SmallChange="100" />
                <NumberBox x:Name="DosePerTap" Minimum="80" Maximum="400" SmallChange="20" />
                <NumberBox x:Name="TapCooldown" Minimum="30" Maximum="600" SmallChange="30" />

                <TextBlock x:Name="WaterProgress" Foreground="Gray" />
                <Button x:Name="LogWaterButton" Click="OnLogWater" />
            </StackPanel>

            <StackPanel Spacing="10">
                <TextBlock x:Name="SectionForce" FontWeight="SemiBold" />
                <ToggleSwitch x:Name="StandOverlayToggle" />
                <ToggleSwitch x:Name="EyesOverlayToggle" />
                <StackPanel Orientation="Horizontal" Spacing="10">
                    <Button x:Name="StartStandButton" Click="OnStartStand" />
                    <Button x:Name="StartEyesButton" Click="OnStartEyes" />
                </StackPanel>
            </StackPanel>

            <StackPanel Spacing="10">
                <TextBlock x:Name="SectionSystem" FontWeight="SemiBold" />
                <ToggleSwitch x:Name="SoundToggle" />
                <ToggleSwitch x:Name="LaunchToggle" />

                <TextBlock x:Name="LanguageLabel" Foreground="Gray" />
                <ComboBox x:Name="LanguageCombo" SelectionChanged="OnLanguageChanged" />

                <StackPanel Orientation="Horizontal" Spacing="10">
                    <Button x:Name="TestToastButton" Click="OnTestToast" />
                    <Button x:Name="ResetButton" Click="OnReset" />
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Window>
